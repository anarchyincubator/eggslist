# Eggslist Backend — Environment Variables
# Copy this file to .env and fill in values:
#   cp .env.example .env
#
# Variables marked [REQUIRED] have no defaults and must be set.
# Variables marked [OPTIONAL] have sensible defaults for local development.

# ──────────────────────────────────────────────
# Core
# ──────────────────────────────────────────────
# [REQUIRED] Environment selector: local | development | prod
ENVIRONMENT=local

# [REQUIRED] Django secret key — generate one with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-random-secret-key

# [OPTIONAL] Default: False
DEBUG=True

# [OPTIONAL] Comma-separated. Default: *
# ALLOWED_HOSTS=localhost,127.0.0.1

# [OPTIONAL] Default: http://localhost:8000
# SITE_URL=http://localhost:8000

# [OPTIONAL] Default: http://localhost:8000 (same as SITE_URL)
# CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://localhost:3000

# ──────────────────────────────────────────────
# Database (PostgreSQL + PostGIS)
# ──────────────────────────────────────────────
# [REQUIRED] These must match your PostgreSQL / docker-compose setup.
DB_NAME=eggslist
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432

# ──────────────────────────────────────────────
# Redis
# ──────────────────────────────────────────────
# [OPTIONAL] Default: redis://127.0.0.1:6379/0
REDIS_URL=redis://redis:6379/0

# ──────────────────────────────────────────────
# Gunicorn (production only — dev override uses runserver)
# ──────────────────────────────────────────────
# [OPTIONAL] Default: 2
# GUNICORN_WORKERS=2

# [OPTIONAL] Default: 600
# GUNICORN_TIMEOUT=600

# [OPTIONAL] Default: 8000
# PORT=8000

# ──────────────────────────────────────────────
# S3-Compatible Object Storage (DigitalOcean Spaces, AWS S3, MinIO)
# ──────────────────────────────────────────────
# [OPTIONAL] Default: False — set to True to use S3 for static/media files
# USE_S3=False
# DO_ACCESS_KEY_ID=
# DO_SECRET_ACCESS_KEY=
# DO_STORAGE_BUCKET_NAME=
# AWS_S3_ENDPOINT_URL=https://nyc3.digitaloceanspaces.com

# ──────────────────────────────────────────────
# Email
# ──────────────────────────────────────────────
# [OPTIONAL] Leave EMAIL_HOST empty to use console email backend (prints to stdout)
# EMAIL_HOST=
# EMAIL_PORT=25
# EMAIL_HOST_USER=
# EMAIL_HOST_PASSWORD=
# EMAIL_USE_SSL=True
# DEFAULT_FROM_EMAIL=noreply@localhost

# ──────────────────────────────────────────────
# OAuth (Google & Facebook login)
# ──────────────────────────────────────────────
# [OPTIONAL] Leave empty to disable social auth
# GOOGLE_CLIENT_ID=
# GOOGLE_SECRET_KEY=
# FACEBOOK_CLIENT_ID=
# FACEBOOK_SECRET_KEY=

# ──────────────────────────────────────────────
# Stripe Payments
# ──────────────────────────────────────────────
# [OPTIONAL] Leave empty to disable Stripe
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_ENDPOINT_SECRET_KEY=
# STRIPE_APPLICATION_FEE=3
# STRIPE_SELLERS_ACCOUNT_TYPE=standard

# ──────────────────────────────────────────────
# Sentry Error Tracking
# ──────────────────────────────────────────────
# [OPTIONAL] Leave empty to disable Sentry
# SENTRY_URL=

# ──────────────────────────────────────────────
# Misc
# ──────────────────────────────────────────────

# ──────────────────────────────────────────────
# Superuser (auto-filled by `make setup`)
# ──────────────────────────────────────────────
# [OPTIONAL] Leave empty to skip automatic superuser creation during migrations.
DJANGO_SUPERUSER_EMAIL=
DJANGO_SUPERUSER_PASSWORD=

# [OPTIONAL] Default: America/New_York
# TIME_ZONE=America/New_York

# [OPTIONAL] Default: localhost
# SESSION_COOKIE_DOMAIN=localhost

# [OPTIONAL] Default: REMOTE_ADDR
# IP_ADDRESS_REQUEST_META_KEY=REMOTE_ADDR

# [OPTIONAL] Default location when user location is unknown
# DEFAULT_CITY=Boston
# DEFAULT_STATE=MA
# DEFAULT_LOOKUP_RADIUS=20
